{# templates/product/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block body %}
    <h1>Edit Product</h1>

    {{ form_start(form) }}
    {{ form_row(form.productName) }}
    {{ form_row(form.productDescription) }}
    {{ form_row(form.dossier) }}
    {{ form_row(form.categoryId) }}
    {{ form_row(form.inStock) }}
    {{ form_row(form.price) }}
    {{ form_row(form.brand) }}
    {{ form_row(form.nbrImage) }}
    {{ form_row(form._token) }}

    <button type="submit">Save Changes</button>
    {{ form_end(form) }}
{% endblock %}
